@functions{
    private readonly char[] _alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();
}

<table class="table table-bordered">
    <thead>
    <tr>
        <th scope="col"></th>
        @for (var x = 0; x < Model.ClickableBoard.GetLength(1); x++)
        {
            <th scope="col">@_alphabet[x]</th>
        }
    </tr>
    </thead>
    @for (var y = 0; y < Model.ClickableBoard.GetLength(0); y++)
    {
        <tr>
            <th scope="row">@(y + 1)</th>
            @for (var x = 0; x < Model.ClickableBoard.GetLength(1); x++)
            {
                <td style="cursor: pointer" onclick="window.location.href = '?x=@x&y=@y&GameId=@Model.GameId'">@Model.ClickableBoard[y, x]</td>
            }
        </tr>
    }
</table>